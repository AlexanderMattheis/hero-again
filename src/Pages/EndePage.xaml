<Page x:Class="Hero.Pages.EndePage"
      x:Name="Self"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      MinHeight="720" MinWidth="1280"
      FontSize="18"
      Title="EndePage">
    
    <Grid Background="{StaticResource BackgroundColorBrush}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="1" VerticalAlignment="Center" Fill="White" Height="80"/>
        <Label Grid.Row="1" FontWeight="Bold" Foreground="DarkRed" Margin="0 0 0 25" HorizontalAlignment="Center" VerticalAlignment="Center">Finale Punktanzahl</Label>
        <Label Grid.Row="1" Foreground="DarkRed" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 25 0 0" 
               Content="{Binding ElementName=Self, Path=Punkte, Mode=OneWay}" d:Content="0"/>

        <StackPanel Grid.Row="2">
            <Button x:Name="NeustartButton" Style="{StaticResource EckigerButton}" Click="NeustartButton_Click">Neustart</Button>
            <Button x:Name="VerlassenButton" Style="{StaticResource EckigerButton}" Click="VerlassenButton_Click">Verlassen</Button>
        </StackPanel>
    </Grid>
</Page>
