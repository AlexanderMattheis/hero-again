<Window x:Class="Hero.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hero.Controls"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Hero" Height="720" Width="1280" MinHeight="720" MinWidth="1280">
    <Grid Background="#FFC11616">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:NumberSelector Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Minimum="1" Maximum="8"/>
    </Grid>
</Window>
